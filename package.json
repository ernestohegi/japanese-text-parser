{
  "name": "japanese-text-parser",
  "version": "2.0.1",
  "description": "Given a file with text in Japanese, it returns a list of words along with their definitions and translation.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development node index.js",
    "test": "jest",
    "lint": "pretty-quick --single-quote --print-width 80 --stage",
    "build": "next build",
    "start": "NODE_ENV=production node index.js",
    "deploy": "now --public && now alias"
  },
  "author": "Ernesto Hegi",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.2",
    "expect": "^22.4.3",
    "express": "^4.16.3",
    "file-saver": "^1.3.8",
    "isomorphic-unfetch": "^2.0.0",
    "kuromoji": "^0.1.2",
    "mocha": "^5.2.0",
    "momentjs": "^2.0.0",
    "next": "^6.1.1",
    "node-fetch": "^2.1.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "uniqid": "^5.0.2"
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "prettier": "1.13.7",
    "pretty-quick": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test",
      "pre-commit": "pretty-quick --single-quote --print-width 80 --staged"
    }
  }
}
