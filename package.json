{
  "name": "japanese-text-parser",
  "version": "1.0.0",
  "description": "Given a sentence in Japanese, it returns a list of words along with their definitions, translations and sentences including them.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development node index.js",
    "test": "jest",
    "lint": "pretty-quick --single-quote --print-width 80 --stage",
    "build": "next build",
    "start": "NODE_ENV=production node index.js",
    "deploy": "npm run test && now --public && now alias"
  },
  "author": "Ernesto Hegi",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "expect": "25.3.0",
    "express": "4.17.1",
    "file-saver": "2.0.2",
    "isomorphic-unfetch": "3.0.0",
    "jsdom": "16.2.2",
    "kuromoji": "0.1.2",
    "moment": "2.24.0",
    "next": "9.3.5",
    "node-fetch": "2.6.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-ga": "2.7.0",
    "uniqid": "5.2.0"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "jest": "25.3.0",
    "mocha": "7.1.1",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test",
      "pre-commit": "pretty-quick --single-quote --print-width 80 --staged"
    }
  }
}
